# Eka.care MCP SDK Configuration

# ==============================================
# API CONFIGURATION
# ==============================================

# Eka.care API base URL
EKA_API_BASE_URL=https://api.eka.care

# ==============================================
# AUTHENTICATION
# ==============================================
# Get these credentials from ekaconnect@eka.care

EKA_CLIENT_ID=
EKA_CLIENT_SECRET=

# Optional API key for additional authentication
EKA_API_KEY=

# ==============================================
# TOKEN STORAGE CONFIGURATION
# ==============================================

# Custom directory for storing authentication tokens
# EKA_TOKEN_STORAGE_DIR=/custom/path/to/tokens

# ==============================================
# MCP SERVER CONFIGURATION
# ==============================================

# MCP server bind configuration
EKA_MCP_SERVER_HOST=localhost
EKA_MCP_SERVER_PORT=8888

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
EKA_LOG_LEVEL=INFO
